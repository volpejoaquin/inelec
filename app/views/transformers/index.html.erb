<%- model_class = Transformer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:mark) %></th>
      <th><%= model_class.human_attribute_name(:power) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:recordId) %></th>
      <th><%= model_class.human_attribute_name(:diagnostic) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:entryOrderId) %></th>
      <th><%= model_class.human_attribute_name(:exitOrderId) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @transformers.each do |transformer| %>
      <tr>
        <td><%= link_to transformer.id, transformer_path(transformer) %></td>
        <td><%= transformer.mark %></td>
        <td><%= transformer.power %></td>
        <td><%= transformer.number %></td>
        <td><%= transformer.recordId %></td>
        <td><%= transformer.diagnostic %></td>
        <td><%= transformer.comments %></td>
        <td><%= transformer.entryOrderId %></td>
        <td><%= transformer.exitOrderId %></td>
        <td><%=l transformer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_transformer_path(transformer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      transformer_path(transformer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_transformer_path,
            :class => 'btn btn-primary' %>
