<%= form_for @transformer, :html => { :class => "form-horizontal transformer" } do |f| %>

  <% if @transformer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@transformer.errors.count, "error") %> prohibited this transformer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @transformer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mark, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mark, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mark) %>
  </div>
  <div class="form-group">
    <%= f.label :power, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :power, :class => 'form-control' %>
    </div>
    <%=f.error_span(:power) %>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :recordId, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :recordId, :class => 'form-control' %>
    </div>
    <%=f.error_span(:recordId) %>
  </div>
  <div class="form-group">
    <%= f.label :diagnostic, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :diagnostic, :class => 'form-control' %>
    </div>
    <%=f.error_span(:diagnostic) %>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :comments, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comments) %>
  </div>
  <div class="form-group">
    <%= f.label :entryOrderId, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :entryOrderId, :class => 'form-control' %>
    </div>
    <%=f.error_span(:entryOrderId) %>
  </div>
  <div class="form-group">
    <%= f.label :exitOrderId, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :exitOrderId, :class => 'form-control' %>
    </div>
    <%=f.error_span(:exitOrderId) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transformers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
