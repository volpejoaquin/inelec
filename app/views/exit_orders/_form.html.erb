<%= form_for @exit_order, :html => { :class => "form-horizontal exit_order" } do |f| %>

  <% if @exit_order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@exit_order.errors.count, "error") %> prohibited this exit_order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @exit_order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :clientId, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :clientId, :class => 'form-control' %>
    </div>
    <%=f.error_span(:clientId) %>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :comments, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comments) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                exit_orders_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
