<%= form_for @diagnostic, :html => { :class => "form-horizontal diagnostic" } do |f| %>

  <% if @diagnostic.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@diagnostic.errors.count, "error") %> prohibited this diagnostic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @diagnostic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :comments, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comments) %>
  </div>
  <div class="form-group">
    <%= f.label :transformerId, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :transformerId, :class => 'form-control' %>
    </div>
    <%=f.error_span(:transformerId) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                diagnostics_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
