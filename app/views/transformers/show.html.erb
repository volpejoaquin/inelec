<%- model_class = Transformer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:mark) %>:</strong></dt>
  <dd><%= @transformer.mark %></dd>
  <dt><strong><%= model_class.human_attribute_name(:power) %>:</strong></dt>
  <dd><%= @transformer.power %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @transformer.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recordId) %>:</strong></dt>
  <dd><%= @transformer.recordId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diagnostic) %>:</strong></dt>
  <dd><%= @transformer.diagnostic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @transformer.comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entryOrderId) %>:</strong></dt>
  <dd><%= @transformer.entryOrderId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exitOrderId) %>:</strong></dt>
  <dd><%= @transformer.exitOrderId %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              transformers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transformer_path(@transformer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transformer_path(@transformer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
